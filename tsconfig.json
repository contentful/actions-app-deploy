{
  "compilerOptions": {
    "target": "es2020",                                                             
    "outDir": "./build",                                  
    "esModuleInterop": true,
    "moduleResolution": "node",                      
    "forceConsistentCasingInFileNames": true,  
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noImplicitAny": false,                                     
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]          
  }
}